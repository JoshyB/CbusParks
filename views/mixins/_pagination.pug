mixin pagination(page, pages, count)

  .pagination
    .pagination__previous
      if page > 1
        a(href=`/parks/page/${ page - 1 }`) Prev
    .pagination__next
      p Page #{page} of #{pages} - #{count} total results
    .pagination__next
      if page < pages
        a(href=`/parks/page/${ parseFloat(page) + 1 }`) Next